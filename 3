12)
x = [0:0.1:(3)];
y = [-2*(pi):0.1:2*(pi)];
[r, u] = meshgrid(x, y);
a = 1
um = 0.2
w = 4
phi = (pi/2)
X = r.*cos(u)
Y = r.*sin(u)
Z = a.*exp(-um*r).*sin(w.*r+phi)
figure
surfc(X, Y, Z)
view(-38, 18)

13)x = [0:0.1:5];
y = [0:0.1:2*pi];
[v, phi] = meshgrid(x, y);
a = 2
R = 3
X = (a+R.*sin(phi)).*cos(v)
Y = (a+R.*sin(phi)).*sin(v)
Z = R.*cos(phi) + b.*v
figure
surfc(X, Y, Z)
view(-38, 18)

14)
 x = [-3:0.1:3];
y = [-3:0.1:3];
[u, v] = meshgrid(x, y);
a = 2
R = 3
X = (1+v.*cos((0.5).*u)).*cos(u)
Y = (1+v.*cos((1/2).*u)).*sin(u)
Z = v.*sin((1/2).*u)
figure
surfc(X, Y, Z)
view(-38, 18)
