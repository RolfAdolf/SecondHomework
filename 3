9)
x = [0:0.1:(3)];
y = [0:0.1:(3*pi)];
[u, v] = meshgrid(x, y);
a = 1
b = 1
X = a.*(((u+b).^2).*(log(u+b))).*sin(v)
Y = a.*(((u+b).^2).*(log(u+b))).*cos(v) 
Z = u
figure
surfc(X, Y, Z)
view(-38, 18)

